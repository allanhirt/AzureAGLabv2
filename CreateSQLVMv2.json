{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminPassword": {
            "type": "SecureString"
        }
    },
    "variables": {
        "AD1VMName": "LabDC",
        "AD1VMNICName": "LabDCNIC",
        "AD1VMPublicIPAddressName": "LabDCPublicIP",
        "ADVMList": "(variables('AD1VMName'))",
        "ADListArray": "[split(variables('ADVMList'),',')]",
        "ADVMSize": "Standard_DS2_v2",
        "AGVMSize": "Standard_D2s_v3",
        "AZRegion": "eastus2",
        "dataDisks": [
            {
                "lun": "0",
                "createOption": "empty",
                "caching": "ReadOnly",
                "writeAcceleratorEnabled": false,
                "id": null,
                "name": null,
                "storageAccountType": "[variables('dataStorageType')]",
                "diskSizeGB": "1023"
            }
        ],
        "dataStorageType": "Premium_LRS",
        "domainadminUsername": "sqlhaudomainadmin",
        "domainName": "SQLHAU.AZURELAB",
        "localadminUsername": "sqlhaulocaladmin",
        "Nodes": [
            {
                "ipconfig": "LabN1IPconfig",
                "nicname": "LabN1NIC",
                "nodename": "LabN1",
                "publicIpAddressName": "LabN1PublicIP",
                "staticIpAddress": "10.0.6.100",
                "zone": "2"
            },
            {
                "ipconfig": "LabN2IPconfig",
                "nicname": "LabN2NIC",
                "nodename": "LabN2",
                "publicIpAddressName": "LabN2PublicIP",
                "staticIpAddress": "10.0.6.101",
                "zone": "3"
            }
        ],
        "networkSecurityGroupName": "LabNSG",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
        "osStorageType": "Premium_LRS",
        "subnetName": "LabSubnet",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', variables('subnetName'))]",
        "virtualNetworkName": "Labnet",
        "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-08-01",
            "name": "[variables('virtualNetworkName')]",
            "location": "[variables('AZRegion')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.6.0/24"
                    ]
                },
                "dhcpoptions": {
                    "dnsServers": [
                        "10.0.6.25"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "10.0.6.0/24"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-08-01",
            "name": "[variables('networkSecurityGroupName')]",
            "location": "[variables('AZRegion')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "RDP",
                        "properties": {
                            "priority": 300,
                            "protocol": "TCP",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "3389"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2018-08-01",
            "name": "[variables('AD1VMPublicIPAddressName')]",
            "location": "[variables('AZRegion')]",
            "sku": {
                "name": "Standard"
            },
            "zones": [
                "1"
            ],
            "properties": {
                "publicIpAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "name": "[variables('AD1VMNICName')]",
            "location": "[variables('AZRegion')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', variables('AD1VMPublicIPAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "AD1VMIPConfig",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAddress": "10.0.6.25",
                            "privateIPAllocationMethod": "Static",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', variables('AD1VMPublicIPAddressName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2018-08-01",
            "name": "[variables('Nodes')[copyIndex()].publicIpAddressName]",
            "location": "[variables('AZRegion')]",
            "sku": {
                "name": "Standard"
            },
            "zones": [
                "[variables('Nodes')[copyIndex()].zone]"
            ],
            "properties": {
                "publicIpAllocationMethod": "Static"
            },
            "copy": {
                "name": "publicIPloop",
                "count": "[length(variables('Nodes'))]"
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "name": "[variables('Nodes')[copyIndex()].nicname]",
            "location": "[variables('AZRegion')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', variables('Nodes')[copyIndex()].publicIpAddressName)]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[variables('Nodes')[copyIndex()].ipconfig]",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAddress": "[variables('Nodes')[copyIndex()].staticIpAddress]",
                            "privateIPAllocationMethod": "Static",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', variables('Nodes')[copyIndex()].publicIpAddressName)]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            },
            "copy": {
                "name": "nodenicloop",
                "count": "[length(variables('Nodes'))]"
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "name": "[variables('AD1VMName')]",
            "location": "[variables('AZRegion')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('AD1VMNICName'))]"
            ],
            "zones": [
                "1"
            ],
            "plan": {
                "name": "ad-dc-2019",
                "publisher": "cloud-infrastructure-services",
                "product": "ad-dc-2019"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('ADVMSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "[variables('osStorageType')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "cloud-infrastructure-services",
                        "offer": "ad-dc-2019",
                        "sku": "ad-dc-2019",
                        "version": "0.0.1"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('AD1VMNICName'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[variables('AD1VMName')]",
                    "adminUsername": "[variables('domainadminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": false,
                        "provisionVmAgent": true
                    }
                }
            }
        },
        {
            "name": "variables('Nodes')[copyIndex('Nodes')].nodename",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "location": "[variables('AZRegion')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('Nodes')[copyIndex('Nodes')].nicname)]"
            ],
            "copy": {
                "name": "nodeloop",
                "count": "[length(variables('Nodes'))]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('AGVMSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "[variables('osStorageType')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "MicrosoftSQLServer",
                        "offer": "SQL2017-WS2016",
                        "sku": "SQLDEV",
                        "version": "latest"
                    },
                    "copy": [
                        {
                            "name": "dataDisks",
                            "count": "[length(variables('dataDisks'))]",
                            "input": {
                                "lun": "[variables('dataDisks')[copyIndex('dataDisks')].lun]",
                                "createOption": "[variables('dataDisks')[copyIndex('dataDisks')].createOption]",
                                "caching": "[variables('dataDisks')[copyIndex('dataDisks')].caching]",
                                "writeAcceleratorEnabled": "[variables('dataDisks')[copyIndex('dataDisks')].writeAcceleratorEnabled]",
                                "diskSizeGB": "[variables('dataDisks')[copyIndex('dataDisks')].diskSizeGB]",
                                "managedDisk": {
                                    "id": "[coalesce(variables('dataDisks')[copyIndex('dataDisks')].id, if(equals(variables('dataDisks')[copyIndex('dataDisks')].name, json('null')), json('null'), resourceId('Microsoft.Compute/disks', variables('dataDisks')[copyIndex('dataDisks')].name)))]",
                                    "storageAccountType": "[variables('dataDisks')[copyIndex('dataDisks')].storageAccountType]"
                                }
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('Nodes')[copyIndex('Nodes')].nicname)]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[variables('Nodes')[copyIndex('Nodes')].nodename]",
                    "adminUsername": "[variables('localadminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                },
                "licenseType": "Windows_Server",
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": false
                    }
                }
            },
                "zones": ["[variables('Nodes')[copyIndex('Nodes')].zone]"]
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "String",
            "value": "[variables('localadminUsername')]"
        }
    }
}